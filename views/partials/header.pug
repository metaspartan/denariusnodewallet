.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle.pull-left.ml(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      .navbar-brand
        img.res(src='../img/denarius.png', alt='Denarius', border='0')
      if user
        .navbar-send.hidden-sm.hidden-md.hidden-lg.hidden-xl
          a.send(href='/withdraw')
            i.fa.fa-paper-plane
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        if !user
          li(class=(title == 'Home') ? 'active' : undefined)
            a(href='/') Home
          li(class=(title == 'Gitter Chat') ? 'active' : undefined)
            a(href='https://gitter.im/denariusproject/Lobby', target='_blank') Gitter Chat
          li(class=(title == 'Contact') ? 'active' : undefined)
            a(href='/contact') Support
          li
            a(href='/status') Status
        else
          li(class=(title == 'My Wallet') ? 'active' : undefined)
            a(href='/wallet') My Wallet
          li(class=(title == 'My Addresses') ? 'active' : undefined)
            a(href='/addresses') My Addresses
      ul.nav.navbar-nav.navbar-right
        if !user
          li(class=(title == 'Login') ? 'active' : undefined)
            a(href='/login') Login
          li(class=(title == 'Create Account') ? 'active' : undefined)
            a(href='/signup') Create Account
        else
          li(class=(title == 'Send DNR') ? 'active' : undefined)
            a(href='/withdraw')
              i.fa.fa-paper-plane 
              | SEND
          li.dropdown(class=(title == 'Account Management') ? 'active' : undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              if user.profile.picture
                img(src=user.profile.picture)
              else
                img(src=user.gravatar(60))
              span= user.email || user.id
              i.caret
            ul.dropdown-menu
              li
                a(href='/account') My Account
              li.divider
              li
                a(href='/logout') Logout
